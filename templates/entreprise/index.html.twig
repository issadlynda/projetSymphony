{% extends 'base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block body %}
<h1>Liste des entreprises</h1>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.nom }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">Voir</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
